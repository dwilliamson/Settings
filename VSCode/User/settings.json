// Place your settings in this file to overwrite the default settings
{
    // --- Editor ----------------------------------------------------------------------------------------------------------------
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",
    "editor.bracketPairColorization.enabled": false,
    "editor.codeLens": false,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.dragAndDrop": false,
    "editor.folding": false,
    "editor.fontFamily": "Fira Code Light",
    "editor.fontSize": 12,
    "editor.fontWeight": "normal",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications",
    "editor.lineHeight": 18,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        100,
        130
    ],
    "editor.snippetSuggestions": "none",
    "editor.trimAutoWhitespace": true,
    "editor.wordBasedSuggestions": false, // Disable world-based suggestions being annoying in string editing (still some active)
    "editor.smoothScrolling": false,
    "editor.suggestSelection": "first",
    "editor.minimap.showSlider": "always",
    // --- Editor ----------------------------------------------------------------------------------------------------------------

    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.loggingLevel": "None",

    "clangd.path": "c:\\Users\\Don Williamson\\AppData\\Roaming\\Code\\User\\globalStorage\\llvm-vs-code-extensions.vscode-clangd\\install\\12.0.0\\clangd_12.0.0\\bin\\clangd.exe",
    "clangd.serverCompletionRanking": false,
    "clangd.arguments": [
        "--log=verbose",
        "-j=12"
    ],

    "csharp.suppressDotnetInstallWarning": true,

    "debug.javascript.autoAttachFilter": "disabled",
    "debug.openDebug": "openOnSessionStart",

    "explorer.autoReveal": false,

    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,

    "files.associations": {
        "*.pibfile": "python",
        "*.fsh": "hlsl",
        "*.csh": "hlsl",
        "*.gsh": "hlsl"
    },
    "files.hotExit": "onExitAndWindowClose",

    "git.alwaysShowStagedChangesResourceGroup": true,
    "git.enabled": true,

    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "scm.diffDecorationsGutterAction": "none",
    "scm.diffDecorationsGutterVisibility": "hover",

    // VSCode still opens different-cased files in a different editor:
    //    https://github.com/Microsoft/vscode/issues/12448
    //
    // These remain in the history and make it impossible to ignore so turn off history altogether.
    "search.quickOpen.includeHistory": false,

    "telemetry.telemetryLevel": "off",

    "terminal.explorerKind": "integrated",
    "terminal.integrated.rightClickBehavior": "default",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.scrollback": 10000,

    "testing.gutterEnabled": false,

    "update.mode": "manual",

    "window.title": "${dirty}${rootName}${separator}${activeEditorMedium}",
    "window.titleBarStyle": "custom",
    "window.restoreWindows": "all",

    "workbench.editor.enablePreview": false,
    "workbench.editor.navigationScope": "editorGroup",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.startupEditor": "none",
 
    "zenMode.hideActivityBar": false,

    "[go]": {
        "editor.formatOnSaveMode": "file",
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },

   "[Log]": {
        "editor.wordWrap": "off"
    },

    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 100,
    },
 }
