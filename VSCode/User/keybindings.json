// Place your key bindings in this file to overwrite the defaults
[
    { "key": "shift+alt+o",             "command": "workbench.action.quickOpen" },
    { "key": "alt+g",                   "command": "editor.action.goToDeclaration",
                                            "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor" },
    { "key": "alt+m",                   "command": "workbench.action.gotoSymbol" },
    { "key": "f7",                      "command": "workbench.action.tasks.build" },
    { "key": "alt+0",                   "command": "workbench.action.focusSideBar" },
    { "key": "alt+1",                   "command": "workbench.action.focusFirstEditorGroup" },
    { "key": "alt+2",                   "command": "workbench.action.focusSecondEditorGroup" },
    { "key": "alt+3",                   "command": "workbench.action.focusThirdEditorGroup" },

    { "key": "ctrl+pausebreak",              "command": "workbench.action.tasks.terminate" },

    { "key": "alt+O", "command": "clangd.switchheadersource" },

    { "key": "f4", "command": "workbench.action.tasks.runTask", "args": "p4edit" },

    // Visual Studio style Control Up/Down
    {
        "key": "ctrl+up",
        "when": "editorTextFocus",
        "command": "editorScroll",
        "args":{
            "to": "up",
            "by": "line",
            "value": 1,
            "revealCursor": true,
        }
    },
    {
        "key": "ctrl+down",
        "when": "editorTextFocus",
        "command": "editorScroll",
        "args":{
            "to": "down",
            "by": "line",
            "value": 1,
            "revealCursor": true,
        }
    },
    {
        "key": "ctrl+p",
        "when": "editorTextFocus",
        "command": "editorScroll",
        "args": {
            "to": "up",
            "by": "halfPage",
            "revealCursor": true
        }
    },
    {
        "key": "ctrl+l",
        "when": "editorTextFocus",
        "command": "editorScroll",
        "args": {
            "to": "down",
            "by": "halfPage",
            "revealCursor": true
        }
    },
    {
        "key": "ctrl+backspace",
        "command": "extension.jumpy-word"
    },
]
